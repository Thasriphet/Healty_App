<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wattana.healty_app.SelfNeeds">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/strL2_Need"
        android:textSize="@dimen/Headingsize"
        android:id="@+id/txtL2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_1"
        android:layout_below="@+id/txtL2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_2"
        android:layout_below="@+id/btnL2_1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_3"
        android:layout_below="@+id/btnL2_2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_4"
        android:layout_alignTop="@+id/btnL2_1"
        android:layout_toRightOf="@+id/btnL2_1"
        android:layout_toEndOf="@+id/btnL2_1"
        android:layout_marginLeft="88dp"
        android:layout_marginStart="88dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_5"
        android:layout_below="@+id/btnL2_4"
        android:layout_alignLeft="@+id/btnL2_4"
        android:layout_alignStart="@+id/btnL2_4"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_6"
        android:layout_below="@+id/btnL2_5"
        android:layout_alignLeft="@+id/btnL2_5"
        android:layout_alignStart="@+id/btnL2_5"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="@dimen/btnsize_wL2"
        android:layout_height="@dimen/btnsize_hL2"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btnL2_7"
        android:layout_below="@+id/btnL2_3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="@dimen/WidthBtnTap"
        android:layout_height="@dimen/HightBtnTap"
        android:id="@+id/home"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/home"
        android:onClick="Home" />

    <Button
        android:layout_width="@dimen/WidthBtnTap"
        android:layout_height="@dimen/HightBtnTap"
        android:id="@+id/type"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/btnL2_6"
        android:layout_alignEnd="@+id/btnL2_6"
        android:onClick="onTyping"
        android:background="@drawable/type" />
</RelativeLayout>
