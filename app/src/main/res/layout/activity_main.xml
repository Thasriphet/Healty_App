<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:layout_width="500dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/txtLv1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/Headingsize"
        android:background="@drawable/head" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn1"
        android:layout_below="@+id/txtLv1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="onSelfNeed"
        android:background="@drawable/btn1"
        android:layout_marginBottom="0dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn2"
        android:onClick="onHappy"
        android:background="@drawable/btn3"
        android:layout_below="@+id/btn1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn3"
        android:layout_below="@+id/btn2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="4dp"
        android:onClick="onSay"
        android:background="@drawable/btn5" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn4"
        android:onClick="onMood"
        android:background="@drawable/btn2"
        android:layout_below="@+id/txtLv1"
        android:layout_alignRight="@+id/Typing"
        android:layout_alignEnd="@+id/Typing" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn5"
        android:onClick="onHeart"
        android:background="@drawable/btn4"
        android:layout_below="@+id/btn4"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp" />

    <Button
        android:layout_width="400dp"
        android:layout_height="80dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/btn6"
        android:onClick="onDisturbance"
        android:background="@drawable/btn6"
        android:layout_below="@+id/btn2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="0dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:textSize="@dimen/txtsizwbtn"
        android:id="@+id/Typing"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="onTyping"
        android:background="@drawable/type" />
</RelativeLayout>
